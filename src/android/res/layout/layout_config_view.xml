                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="117dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="Y轴"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/second_y_edit_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/oval_edit_text_background"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:paddingRight="15dp"
                android:paddingBottom="8dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="Z轴"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/second_z_edit_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/oval_edit_text_background"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:paddingRight="15dp"
                android:paddingBottom="8dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="51dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="宽度"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/second_width_edit_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/oval_edit_text_background"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:paddingRight="15dp"
                android:paddingBottom="8dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="113dp"
            android:layout_marginTop="51dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="高度"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/second_height_edit_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/oval_edit_text_background"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:paddingRight="15dp"
                android:paddingBottom="8dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <Switch
            android:id="@+id/audio_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="true"
            android:switchPadding="10dp"
            android:text="音频"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="70dp"
            android:layout_height="29dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginEnd="41dp"
            android:background="@drawable/oval_btn_background"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/textColor"
            android:textSize="15sp" />
    </FrameLayout>

</LinearLayout>